function countBs(bs) {
  var howmany = 0;
  for ( var count = bs.length; count > 0; count-- ) {
    if ( bs.charAt(count - 1) == "B" ) {
      howmany += 1;
    }
  }
  return howmany;
}

function countChar(bs, what) {
  var howmany = 0;
  for ( var count = bs.length; count > 0; count-- ) {
    if ( bs.charAt(count - 1) == what ) {
      howmany += 1;
    }
  }
  return howmany;
}


console.log(countBs("BBasdasasaBBdvaBC"));
console.log(countChar("kakkscdsadwqc3rtcwtkkkkkerlak", "k"));

